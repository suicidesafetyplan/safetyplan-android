<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.moodtools.crisis.app.editcopingstrategies">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copingstrategiesquestion"
        android:id="@+id/copingexplanation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/copingstrategiesenter"
        android:id="@+id/copingenter"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/copingexplanation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/copingenterlinearlayout"
        android:layout_below="@+id/copingenter">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textCapSentences"
            android:id="@+id/copingedittext2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext3"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext4"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext5"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext6"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext7"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext8"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext9"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/copingedittext10"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionDone" />
    </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addanother"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:onClick="AddNew"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/copingstrategiesaddnew"
            android:layout_below="@+id/copingenterlinearlayout"/>


    </RelativeLayout>
</ScrollView>