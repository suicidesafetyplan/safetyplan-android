<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.moodtools.crisis.app.editwarningsigns">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warningsignsquestion"
        android:id="@+id/warningsignsquestion"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/warningsignsenter"
        android:id="@+id/warningsignsenter"
        android:fontFamily="sans-serif-light"
 />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext1"
        android:inputType="textCapSentences"
        android:singleLine="true"
        android:imeOptions="actionNext"
/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext2"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
 />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext3"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext4"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext5"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext6"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext7"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext8"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext9"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionNext"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warningedittext10"
        android:singleLine="true"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/addanother"
            android:textSize="17sp"
            android:textColor="@color/gray"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/warningsignsaddnew"
            />

    </LinearLayout>
</ScrollView>